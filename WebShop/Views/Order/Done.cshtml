@model WebShop.Web.ViewModels.ExtraPurchaseViewModel

@{
    ViewData["Title"] = "Done";
}

<h2>Your purchase was succesfull</h2>

<h3>You can add the following item to your purchase</h3>

<div class="col-sm-6">
    <img height="200px" src="@Url.Content(Model.ImageUrl)" />
    <div class="caption">
        <h3>Price: @Model.Price.ToString("c")</h3>
        <h3>@Model.Title</h3>
        <p>@Model.Description</p>
    </div>
    <div>
        <a class="btn" id="cartButton"
           asp-controller="Order"
           asp-action="PurchaseOrder"
           asp-route-productId="@Model.ProductID">
            Add to Order
        </a>
    </div>
</div>

@ViewData["description"]


