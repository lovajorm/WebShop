@model WebShop.Bo.Product

<style type="text/css">
    .btn {
        padding: 5px 10px;
        border: 1px solid #000;
        color: #000000;
        background-color: #FFF;
    }
    .thumbnail a img {
        height: 300px;
    }
</style>

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductID">
            <img src="@Url.Content(Model.ImageUrl)" /></a>
            <div class="caption">
                <h3 class="pull-right">Price: @Model.Price.ToString("c")</h3>
                <h3>@Model.Title</h3>
                <p>@Model.Description</p>
            </div>
            <div class="addToCart text-right">
                <p class="button">
                    <a class="btn" id="cartButton"
                       asp-controller="ShoppingCart"
                       asp-action="AddToShoppingCart"
                       asp-route-productId="@Model.ProductID">
                        Add to cart
                    </a>
                </p>
            </div>
</div>
</div>